<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_margin_15dp"
    android:layout_margin="@dimen/activity_margin_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/activity_margin_15dp"
        app:cardElevation="@dimen/activity_margin_2dp"
        android:layout_margin="@dimen/activity_margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="@dimen/activity_margin_120dp"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_margin_5dp"
            android:layout_margin="@dimen/activity_margin_8dp"
            android:orientation="vertical"
            >
            <CheckBox
                android:id="@+id/comparisonCheckbox"
                android:layout_width="@dimen/activity_margin_20dp"
                android:layout_height="@dimen/activity_margin_20dp"
                android:layout_gravity="end"
                />
            <ImageView
                android:id="@+id/comparisonImageView"
                android:layout_margin="@dimen/activity_margin_5dp"
                android:layout_width="@dimen/activity_margin_100dp"
                android:layout_height="@dimen/activity_margin_50dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/comparisonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/activity_margin_12sp"
                android:layout_margin="@dimen/activity_margin_5dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>