<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_margin_5dp"
        android:padding="@dimen/activity_margin_5dp"
        android:background="@drawable/linearbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/activity_margin_15dp"
            android:layout_marginTop="@dimen/activity_margin_8dp"
            android:layout_marginStart="@dimen/activity_margin_8dp"
            android:layout_marginEnd="@dimen/activity_margin_8dp"
            app:layout_constraintTop_toTopOf="parent"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/activity_margin_70dp"
                android:layout_height="@dimen/activity_margin_40dp"
                android:layout_marginTop="@dimen/activity_margin_30dp"
                android:layout_marginStart="@dimen/activity_margin_10dp"
                android:layout_marginEnd="@dimen/activity_margin_5dp"
                android:layout_marginBottom="@dimen/activity_margin_20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_margin_10dp"
                android:layout_marginStart="@dimen/activity_margin_5dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                >
            <TextView
                android:id="@+id/policyTerm"
                android:layout_width="@dimen/activity_margin_110dp"
                android:textSize="@dimen/activity_margin_10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_5dp"
                android:layout_marginTop="@dimen/activity_margin_5dp"
                tools:ignore="SmallSp" />
            <TextView
                android:id="@+id/tillYouTurn"
                android:layout_width="@dimen/activity_margin_110dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_margin_10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:layout_marginStart="@dimen/activity_margin_5dp"
                android:layout_marginTop="@dimen/activity_margin_5dp"
                tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/activity_margin_5dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                android:layout_marginEnd="@dimen/activity_margin_10dp"
                >

                <TextView
                    android:id="@+id/priceInc"
                    android:layout_width="@dimen/activity_margin_90dp"
                    android:layout_height="@dimen/activity_margin_20dp"
                    android:textSize="@dimen/activity_margin_6sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/latinotypeantartidaroundedmedium"
                    android:background="@drawable/price_increase"
                    android:layout_marginStart="@dimen/activity_margin_15dp"
                    android:layout_marginBottom="@dimen/activity_margin_5dp"
                    tools:ignore="SmallSp" />


            <android.widget.Button
                android:id="@+id/button1"
                android:layout_width="@dimen/activity_margin_100dp"
                android:layout_height="@dimen/activity_margin_40dp"
                android:textSize="@dimen/activity_margin_10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/latinotypeantartidaroundedbold"
                android:background="@drawable/button"
                android:layout_marginEnd="@dimen/activity_margin_5dp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/coverTxtView"
                android:layout_width="@dimen/activity_margin_110dp"
                android:layout_marginTop="@dimen/activity_margin_5dp"
                android:textSize="@dimen/activity_margin_9sp"
                android:gravity="center"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:layout_marginBottom="@dimen/activity_margin_5dp"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />

            </LinearLayout>


        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_5dp"
                android:layout_marginTop="@dimen/activity_margin_90dp"
                android:background="@drawable/dotted_horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_margin_100dp"
            >

            <TextView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_10dp"
                android:gravity="center"
                android:textSize="@dimen/activity_margin_10sp"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:layout_marginTop="@dimen/activity_margin_5dp"
                android:layout_marginBottom="@dimen/activity_margin_5dp"
                app:drawableStartCompat="@drawable/download"
                android:textColor="@color/blue"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/limitedPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_5dp"
                android:textSize="@dimen/activity_margin_10sp"
                android:gravity="end"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:layout_marginStart="@dimen/activity_margin_40dp"
                android:layout_marginBottom="@dimen/activity_margin_5dp"
                android:layout_marginEnd="@dimen/activity_margin_20dp"
                tools:ignore="SmallSp" />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_margin_5dp"
                android:layout_marginTop="@dimen/activity_margin_137dp"
                android:background="@drawable/dotted_horizontal_line"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_140dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_6dp"
                        android:text="●"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"/>
                    <TextView
                        android:id="@+id/claim"
                        android:layout_width="@dimen/activity_margin_130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_5dp"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:textSize="@dimen/activity_margin_10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_15dp"
                        android:layout_marginTop="@dimen/activity_margin_6dp"
                        android:text="●"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"/>

                    <TextView
                        android:id="@+id/income"
                        android:layout_width="@dimen/activity_margin_140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_5dp"
                        android:layout_marginEnd="@dimen/activity_margin_10dp"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:textSize="@dimen/activity_margin_10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_6dp"
                        android:text="●"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"/>
                    <TextView
                        android:id="@+id/lumpsumAmt"
                        android:layout_width="@dimen/activity_margin_130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_5dp"
                        android:layout_marginBottom="@dimen/activity_margin_10dp"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:textSize="@dimen/activity_margin_10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_15dp"
                        android:layout_marginTop="@dimen/activity_margin_6dp"
                        android:text="●"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/activity_margin_5dp"/>

                    <TextView
                        android:id="@+id/preMedical"
                        android:layout_width="@dimen/activity_margin_140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_5dp"
                        android:layout_marginTop="@dimen/activity_margin_5dp"
                        android:layout_marginEnd="@dimen/activity_margin_10dp"
                        android:layout_marginBottom="@dimen/activity_margin_10dp"
                        android:fontFamily="@font/latinotypeantartidaroundedmedium"
                        android:textSize="@dimen/activity_margin_10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/activity_margin_18dp"
                android:layout_gravity="center"
                android:drawableStart="@drawable/double_down"
                android:layout_marginBottom="@dimen/activity_margin_5dp"
                android:layout_marginEnd="@dimen/activity_margin_130dp"
                android:layout_marginStart="@dimen/activity_margin_130dp"
                android:background="@drawable/view_more_bg"
                android:fontFamily="@font/latinotypeantartidaroundedmedium"
                android:gravity="center"
                android:text="@string/view_more"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_margin_10sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>